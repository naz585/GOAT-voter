{{#if info}}
    <div role="alert" class="alert alert-success text-center">
        <div>{{ info.[0] }}</div>
    </div>
{{/if}}

{{#unless isEmailConfirmed}}
    {{#if login}}
        <div role="alert" class="alert alert-warning m0">
            <div class="container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-sm-6 mmb10">
                        <div>Confirm your email address to access all of Goat Voters' features. A confirmation message was sent to<strong> {{ email }}</strong></div>
                    </div>
                    <div class="col-sm-5 col-md-4 text-right">
                        <form action="/auth/emailconfirmation" method="POST">
                            <input type="hidden" name="email" id="email" value="{{ email }}">
                            <button type="submit" class="btn-submit">Resend confirmation</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/unless}}

<header class="heavy-rain-gradient " >
    <div class="container header-container heavy-rain-gradient ">
        
            
 
        <a href="/"><img class = "goat" src="/img/favicon.png" width="85" height="100" alt="goat voter logo"> </a>
        <h2 class="appTittle">The G.O.A.T Voter</h2>
        <nav id="theGoat" class="header-nav">

            {{#if login}}
                <a href="/profile">Profile</a>
                <a href="/logout">Logout</a>
            {{else}}
                <a href="/login">Login</a>
                <a href="/signup" class="btn-submit">Sign Up</a>
            {{/if}}
        </nav>

            
     
    </div>
</header>